<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="eview_task_form2_description_on_task" model="ir.ui.view">
            <field name="name">Project.task</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <page name="description_page" position="replace"/>
                <field name="project_id" position="replace"/>
                <field name="date_deadline" position="replace"/>
                <field name="user_id" position="replace"/>
                <field name="tag_ids" position="replace"/>
                <xpath expr="//form/sheet/div[2]" position="replace">
                    <div class="oe_title pr-0" style="width:400px;">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="priority" widget="priority" class="mr-3"/>
                            <field name="name" class="o_task_name text-truncate" placeholder="Task Title..."/>
                            <field name="kanban_state" widget="state_selection" class="ml-auto"/>
                        </h1>
                    </div>
                </xpath>
                <!-- <field name="production_time_count" position="before">
                    <field name="project_id"/>
                    <field name="user_id"/>
                    <field name="date_deadline"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                </field> -->
                <xpath expr="//form/sheet/group/group[2]" position="inside">
                    <field name="description" nolabel="1" style="margin-top:-70px;"/>
                </xpath>
            </field>
        </record>

        <record id="view_task_form2_inh_task_description" model="ir.ui.view">
            <field name="name">Project.task</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="task_advance.view_task_form2_inh"/>
            <field name="arch" type="xml">
                <field name="production_time_count" position="before">
                    <field name="project_id"/>
                    <field name="user_id"/>
                    <field name="date_deadline"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                </field>
            </field>
        </record>

        <record id="view_task_kanban_description_on_task" model="ir.ui.view">
            <field name="name">Project.task</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <field name="color" position="after">
                    <field name="description"/>
                </field>
                <xpath expr="//kanban/templates/t/div/div/div/div/strong" position="before">
                    <span>
                        <field name="description" widget="html"/>
                    </span>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
