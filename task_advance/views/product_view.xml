<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_form_view_inh_task_adv" model="ir.ui.view">
            <field name="name">product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='purchase']" position="after">
                    <page name="production_info" string="Production Info">
                        <group>
                            <group>
                                <field name="resource_id"/>
                                <field name="capacity_machine_id" domain="[('resource_id', '=', resource_id)]" invisible="1"/>
                                <field name="preproduction_time" widget="float_time"/>
                                <field name="postproduction_time" widget="float_time"/>
                                <field name="product_lead_time" widget="float_time"/>
                            </group>
                            <group>
                                <field name="production_time_1" widget="float_time"/>
                                <field name="production_time_2" widget="float_time"/>
                                <field name="production_time_3" widget="float_time"/>
                                <field name="max_production_time" widget="float_time"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
