<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="edit_project_form_inh_task_advance" model="ir.ui.view">
            <field name="name">Projects</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="production_project"/>
                </field>
            </field>
        </record>

        <record id="view_task_dashboard_search" model="ir.ui.view">
            <field name="name">project.task.search.kanaban</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
               <search string="Tasks">
                    <field name="name" string="Tasks"/>
                    <field name="tag_ids"/>
                    <field name="partner_id"/>
                    <field name="project_id"/>
                    <field name="user_id"/>
                    <field name="stage_id"/>
                    <filter string="Production" name="production"
                        domain="[('project_id.production_project', '=', True)]"/>
                    <separator/>
                    <filter string="Today" name="production_today"
                        domain="[('capacity_machine_id.date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('capacity_machine_id.date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]"/>
                    <filter string="Yesterday" name="yesterday_production"
                        domain="[('capacity_machine_id.date','&gt;=', ((context_today()-datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00'))), ('capacity_machine_id.date','&lt;=', ((context_today()-datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:23:59')))]"/>
                    <filter string="Tomorrow" name="tomorrow_production"
                        domain="[('capacity_machine_id.date','&gt;=', ((context_today()+datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00 '))), ('capacity_machine_id.date','&lt;=', ((context_today()+datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:23:59')))]"/>
                    <filter string="This week" name="this_week_production"
                        domain="[('capacity_machine_id.date', '&gt;=', ((context_today()+relativedelta(weeks=-1,days=1, weekday=0)).strftime('%Y-%m-%d'))),('capacity_machine_id.date', '&lt;=', ((context_today()+relativedelta(weeks=0,weekday=6)).strftime('%Y-%m-%d')))]"/>
                    <filter string="Last week" name="last_week_production"
                        domain="[('capacity_machine_id.date', '&gt;=', ((context_today()+relativedelta(weeks=-2,days=1, weekday=0)).strftime('%Y-%m-%d'))),('capacity_machine_id.date', '&lt;=', ((context_today()+relativedelta(weeks=-1,weekday=6)).strftime('%Y-%m-%d')))]"/>
                    <filter string="Next Week" name="next_week_production"
                        domain="[('capacity_machine_id.date','&gt;=',(context_today()+relativedelta(weeks=0,weekday=6)).strftime('%Y-%m-%d')),
                        ('capacity_machine_id.date','&lt;',(context_today()+relativedelta(weeks=1,weekday=6)).strftime('%Y-%m-%d'))
                        ]" />
                    <filter string="This month" name="this_month_production"
                        domain="[('capacity_machine_id.date','&gt;=',(context_today()).strftime('%Y-%m-01')),
                        ('capacity_machine_id.date','&lt;',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01'))
                        ]" />
                    <filter string="Last month" name="last_month_production"
                        domain="[('capacity_machine_id.date','&lt;=',(context_today()).strftime('%Y-%m-01')),
                        ('capacity_machine_id.date','&gt;',(context_today()-relativedelta(months=1)).strftime('%Y-%m-01'))
                        ]" />
                    <filter string="Next month" name="next_month_production"
                        domain="[('capacity_machine_id.date','&gt;=',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01')),
                        ('capacity_machine_id.date','&lt;',(context_today()+relativedelta(months=2)).strftime('%Y-%m-01'))
                        ]" />
                    <filter string="This Year" name="this_year_production"
                        domain="[('capacity_machine_id.date','&gt;=',(context_today()).strftime('%Y-01-%d')),
                        ('capacity_machine_id.date','&lt;',(context_today()+relativedelta(years=1)).strftime('%Y-01-%d'))
                        ]" />
                    <filter string="Last Year" name="last_year_production"
                        domain="[('capacity_machine_id.date','&lt;=',(context_today()).strftime('%Y-01-%d')),
                        ('capacity_machine_id.date','&gt;',(context_today()-relativedelta(years=1)).strftime('%Y-01-%d'))
                        ]" />
                    <filter string="Next Year" name="next_year_production" 
                        domain="[('capacity_machine_id.date','&gt;=',(context_today()+relativedelta(years=1)).strftime('%Y-01-%d')),
                        ('capacity_machine_id.date','&lt;',(context_today()+relativedelta(years=2)).strftime('%Y-01-%d'))
                        ]"/>
                    <!-- <filter string="Production Start Date" name='gp_production_start_time' context="{'group_by':'production_start_time:day'}"/> -->
                    <!-- <filter string="Stage" name='gp_stage_id' context="{'group_by':'stage_id'}"/> -->
                    <group expand="0" string="Group By">
                        <filter string="Project" name="project" context="{'group_by':'project_id'}"/>
                        <filter string="Stage" name="stage" context="{'group_by':'stage_id'}"/>
                        <filter string="Machine Capacity" name="capacity_machine_id" context="{'group_by':'capacity_machine_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_task_dashboard_kanban" model="ir.ui.view">
            <field name="name">task.dashboard.kanban</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column o_kanban_project_tasks" on_create="quick_create" quick_create_view="project.quick_create_task_form" examples="project">
                    <field name="color"/>
                    <field name="priority"/>
                    <field name="stage_id" options='{"group_by_tooltip": {"description": "Stage Description", "legend_priority": "Use of stars"}}'/>
                    <field name="user_id"/>
                    <field name="user_email"/>
                    <field name="sequence"/>
                    <field name="date_deadline"/>
                    <field name="message_needaction_counter"/>
                    <field name="displayed_image_id"/>
                    <field name="active"/>
                    <field name="legend_blocked"/>
                    <field name="legend_normal"/>
                    <field name="legend_done"/>
                    <field name="activity_ids"/>
                    <field name="activity_state"/>
                    <field name="rating_last_value"/>
                    <field name="rating_ids"/>
                    <field name="production_start_time"/>
                    <field name="production_end_time"/>
                    <field name="production_time_count"/>
                    <field name="capacity_machine_id"/>
                    <progressbar field="production_state" colors='{"done": "success", "blocked": "danger"}' sum_field="production_time_count"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <field name="description" widget="html"/>
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="project_id" invisible="context.get('default_project_id', False)"/>
                                            <t t-if="record.production_start_time.raw_value and record.production_start_time.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
                                            <span t-attf-class="#{red || ''}"><i><field name="production_start_time"/></i></span>
                                            <t t-if="record.email_from.raw_value"><span><field name="email_from"/></span></t>
                                        </small>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                        <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a t-if="widget.editable" role="menuitem" type="set_cover" class="dropdown-item">Set Cover Image</a>
                                            <a name="%(portal.portal_share_action)d" role="menuitem" type="action" class="dropdown-item">Share</a>
                                            <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit Task</a>
                                            <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                            <div role="separator" class="dropdown-divider"></div>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    <div t-if="record.displayed_image_id.value">
                                        <field name="displayed_image_id" widget="attachment_image"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                        <field name="activity_ids" widget="kanban_activity"/>
                                        <t t-if="record.message_needaction_counter.raw_value">
                                            <span role="alert" class='oe_kanban_mail_new' title='Unread Messages'><i class='fa fa-comments' role="img" aria-label="Unread Messages"/><t t-raw="record.message_needaction_counter.raw_value"/></span>
                                        </t>
                                        <b t-if="record.rating_ids.raw_value.length">
                                            <span style="font-weight:bold;" class="fa fa-fw mt4 fa-smile-o text-success" t-if="record.rating_last_value.value == 10" title="Latest Rating: Satisfied" role="img" aria-label="Happy face"/>
                                            <span style="font-weight:bold;" class="fa fa-fw mt4 fa-meh-o text-warning" t-if="record.rating_last_value.value == 5" title="Latest Rating: Not Satisfied" role="img" aria-label="Neutral face"/>
                                            <span style="font-weight:bold;" class="fa fa-fw mt4 fa-frown-o text-danger" t-if="record.rating_last_value.value == 1" title="Latest Rating: Higly Dissatisfied" role="img" aria-label="Sad face"/>
                                        </b>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="kanban_state" widget="state_selection" groups="base.group_user"/>
                                        <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value" width="24" height="24" class="oe_kanban_avatar"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="act_open_task_kanban_view" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="view_task_dashboard_kanban"/>
            <field name="context">{'search_default_capacity_machine_id': 1, 'search_default_production': 1}</field>
            <field name="search_view_id" ref="view_task_dashboard_search"/>
        </record>

        <menuitem name="Task Dashboard" id="menu_task_dashboard" parent="project.menu_main_pm" sequence="2" action="act_open_task_kanban_view"/>

        <record id="view_task_form2_inh" model="ir.ui.view">
            <field name="name">project.task.inh</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group[1]" position="inside">
                    <field name="production_start_time" invisible="1"/>
                    <field name="production_end_time" invisible="1"/>
                    <field name="production_time_count" widget="float_time" readonly="1"/>
                    <field name="resource_id"/>
                    <field name="capacity_machine_id" domain="[('resource_id', '=', resource_id)]"/>
                    <field name="production_state" invisible="0"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
